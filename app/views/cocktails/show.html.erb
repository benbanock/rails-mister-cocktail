<h1><%=@cocktail.name %></h1>
<ul>
<% @cocktail.doses.each do |dose| %>
  <li><%= dose.description %> <%= dose.ingredient.name %>
    <%= link_to "Delete", cocktail_dose_path(@cocktail, dose), method: :delete %>
  </li>
  <% end %>
  <% if  @cocktail.photo.present? %>

  <%= cl_image_tag @cocktail.photo, height: 300, width: 400, crop: :fill %>
  <% end %>

</ul>
<%= link_to "Delete", cocktail_path(@cocktail),
      method: :delete,
      data: { confirm: "Are you sure?" }, class: "btn btn-primary"%>

<%= link_to "go back home", cocktails_path, class: "btn btn-primary" %>
